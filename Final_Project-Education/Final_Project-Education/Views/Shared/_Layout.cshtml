@model VmLayout
@inject AppDbContext _context
@{
    string controller = this.ViewContext.RouteData.Values["controller"].ToString().ToLower();
}


<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CodeCampBaku</title>

    <!--Link Bootstrap file-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--Link Bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- CSS Link Plagins for videos Into Pages-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
    <!-- two links for fonts Roboto and Jost-->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@100;200;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap"
          rel="stylesheet">

    <!-- two links for owl-carousel-->
    <link href="~/assets/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/assets/css/owl.theme.default.min.css" rel="stylesheet" />

    <!--Link CSS file-->
    <link href="~/assets/css/main.css" rel="stylesheet" />
</head>

<body class="hidden" data-spy="scroll" data-target=".navbar" data-offset="50">
    <!-- Preloader -->
    <div id="onload" class="centrado">
        <p class="content">Loading...</p>
        <div class="lds-roller">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>    <!--!--!--section header--!--!--!-->
    <header id="header" class="section-header">
        <div class="header-top" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-6 col-sm-12">
                        <div class="header-contact d-flex ">
                            <div class="header-locations d-flex">
                                <div class="location-icon ">
                                    <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
                                </div>
                                <div class="location-text ">
                                    <a href="@Model.Settings.Address" title="location">
                                        <p class="content">@(Model!=null && Model.Settings!=null? Model.Settings.Address:"")</p>
                                    </a>
                                </div>
                            </div>
                            <div class="header-mail d-flex ">
                                <div class="mail-icon">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </div>
                                <div class="mail-text">
                                    <a href="#" title="mail">
                                        <p class="content"> @(Model!=null && Model.Settings!=null? Model.Settings.Email:"")</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <p class="content">@ViewBag.Name</p>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-12">
                        <div class="top-sosial d-flex">
                            @if (_context.Socials != null)
                            {
                                @foreach (var sosial in _context.Socials)
                                {
                                    <a href="@sosial.Link" title="@sosial.Name"><i class="@sosial.Icon" aria-hidden="true"></i></a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <nav id="sticky" class="header-nav navbar navbar-expand-lg menu  ">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/Uploads/@_context.Settings.FirstOrDefault().Logo" alt="logo_banner">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="dropdown-item @(controller=="home"?"nav-link active active-color bg-color:none":"")" asp-area="" asp-controller="Home" asp-action="Index">Əsas səhifə</a>
                    </li>
                    <li class="nav-item secondLi">
                        <a class="dropdown-item @(controller=="course"?"nav-link active active-color":"")" asp-area="" asp-controller="Course" asp-action="Index">Kurslarımız</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item @(controller=="pages"?"nav-link active active-color":"")" asp-area="" asp-controller="Instructor" asp-action="Index">Müəllimlər</a>

                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item @(controller=="blog"?"nav-link active active-color":"")" asp-area="" asp-controller="Blog" asp-action="Index">Xəbərlər</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item @(controller=="event"?"nav-link active active-color":"")" asp-area="" asp-controller="Event" asp-action="Index">Tədbirlər</a>
                    </li>

                    <li class="nav-item dropdown d-flex">
                        <a class="dropdown-toggle @(controller=="pages"?"nav-link active active-color":"")" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Əlavələr
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item @(controller=="about"?"nav-link active active-color":"")" asp-area="" asp-controller="About" asp-action="Index">Haqqımızda </a></li>
                            <li><a class="dropdown-item @(controller=="pages"?"nav-link active active-color":"")" asp-area="" asp-controller="Faq" asp-action="Index">Suallarınız</a></li>
                            <li><a class="dropdown-item @(controller=="pages"?"nav-link active active-color":"")" asp-area="" asp-controller="Pricing" asp-action="Index">Ödənişlər</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="dropdown-item  @(controller=="contact"?"nav-link active active-color":"")" asp-area="" asp-controller="Contact" asp-action="Index">Əlaqə</a>
                    </li>
                    <a asp-area="" asp-controller="Course" asp-action="Index" class="button btn-1">Müraciət et</a>
                </ul>
            </div>

        </div>
    </nav>



    @RenderBody()


    <!--!--!--section subscribe--!--!--!-->
    <section id="subscribe" class="section-subscribe">
        <div class="container">
            <div class="outer-box">
                <img src="~/assets/images/icons/cta-bg-img.png" alt="">
                <div class="row">
                    <div class="title-column col-lg-9 col-md-12 ">
                        <h1 class="header">Ən Yaxşı Dərslərinizi Bizimlə Başlayın</h1>
                    </div>
                    <div class="subscribe-form col-lg-3 col-md-12">
                        <a asp-area="" asp-controller="Contact" asp-action="Index" class="button btn-1">Bizimlə əlaqə</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--!--!--section footer--!--!--!-->
    <section id="footer" class="section-footer bg-gradient ">
        <div class="footer-about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 footer-about-sosials">
                        <div class="fooret-logo">
                            <img src="~/assets/images/icons/logo-footer.png" alt="">
                        </div>
                        <p class="content">
                            Haqqımızda maraqlandığınız üçün təşəkkür edirik. Əlavə olaraq aşağıdakı sosial şəbəkələrdən bizi izləyə bilərsiniz. 
                        </p>
                        <div class="footer-sosials">
                            @if (_context.Socials != null)
                            {
                                @foreach (var sosial in _context.Socials)
                                {
                                    <a href="@sosial.Link" title="@sosial.Name"><i class="@sosial.Icon" aria-hidden="true"></i></a>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-lg-3 first-links">
                        <h3 class="title">Səhifələr</h3>
                        <ul>
                            <li><a asp-controller="home" asp-action="Index">Əsas səhifə</a></li>
                            <li><a asp-controller="about" asp-action="Index">Haqqımızda</a></li>
                            <li><a asp-controller="course" asp-action="Index">Kurslar</a></li>
                            <li><a asp-controller="blog" asp-action="Index">Xəbərlər</a></li>
                            <li><a asp-controller="contact" asp-action="Index">Bizimlə əlaqə</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 second-links">
                        <h3 class="title">Academiya</h3>
                        <ul>
                            <li><a asp-controller="instructor" asp-action="Index">Müəllimlər</a></li>
                            <li><a asp-controller="faq" asp-action="Index">Suallar</a></li>
                            <li><a asp-controller="event" asp-action="Index">Tədbirlər</a></li>
                            <li><a asp-controller="pricing" asp-action="Index">Güzəştlər</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 fooret-subscribe">
                        <h3 class="title">İndi abunə olun</h3>
                        <form id="subscribies" class="footer-subscribe-form" method="post" data-id="7" asp-controller="home" asp-action="Subscribe">
                            <p>
                                <input class="email form-input subscribe-input" name="email" placeholder="subscribies@gmail.com">
                                <button type="submit" id="sec-btn" class="sec-btn" value="subscribe">
                                    <i class="fa fa-paper-plane" aria-hidden="true"></i>
                                </button>
                            </p>
                            <div class="mc4wp-response"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <span class="copyright-text">
                            &copy; 2022 <a href="#">CodeCampBaku.</a> Bütün hüquqlar qorunur
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <a href="#" id="top" onclick="topFunction()" class="top-btn" title="Go to top">
        <div class="Up-btn-cickle">
            <i class="fas fa-book-reader"></i>
        </div>
        <span class="top-btn-text">Up</span>
    </a>

    <!-- Js Link Plagins for videos Into Pages-->
    <script src="~/assets/vendors/js/glightbox.min.js"></script>
    <script type="text/javascript">
        const lightbox = GLightbox({
            href: "https://www.youtube.com/watch?v=ZN615Fm1PKY",
            type: "video",
            source: "youtube", //vimeo, youtube or local
            width: 900,
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/mcstudios/glightbox/dist/js/glightbox.min.js"></script>
    <script src="https://kit.fontawesome.com/72406166e8.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--Link Bootstrap Bundle with Popper-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- two links for owl-carousel-->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>

</html>
