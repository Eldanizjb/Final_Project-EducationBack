@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table About</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="About" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>ImageBack</th>
                            <th>Title</th>
                            <th>Content</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                    <td> <img src="~/Uploads/@item.Image" alt="alternative text" style="width:200px; height:200px" /></td>
                                    <td> <img src="~/Uploads/@item.ImageBack" alt="alternative text" style="width:200px; height:200px" /></td><td>@item.Title</td>
                                    <td>@Html.Raw(item.Content != null && item.Content.Length > 150 ? item.Content.Substring(0, 150) : item.Content)</td>
                                    
                                    <td>
                                        <a class="btn btn-success" asp-area="admin" asp-controller="About" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="admin" asp-controller="About" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                        <a class="btn btn-primary" asp-area="admin" asp-controller="About" asp-action="AboutDetail" asp-route-id="@item.Id">Details</a>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
