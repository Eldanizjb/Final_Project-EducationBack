<section id="breadcrum" class="section-breadcrum">
    <div class="container">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 d-flex flex-wrap-nowrap justify-content-center">
                <div class="banner-breadcrum ">
                    <ul class="d-flex justify-content-center">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" title="Home">Home</a></li>
                        <li><i class="fa fa-angle-right" aria-hidden="true"></i></li>
                        <li><a asp-controller="pricing" asp-action="index" title="Pricing">Satışlar</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>
</section>
<!--!--!--section pricing--!--!--!-->
<section id="pricing" class="section-pricing">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mt-5">
                <div class="pricing-body">
                    <div class="row">
                        <h1>@ViewBag.PricingTime</h1>

                        @foreach (var pric in Model.Pricings)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <div class="pricing-body-content p-4">
                                    <div class="pricing-body-content-header">
                                        <h3 class="title">@pric.Title</h3>
                                        <p class="content">@pric.SupTitle</p>
                                    </div>
                                    <div class="pricing-body-content-price pr-0">
                                        <p class="content">
                                            <i class="bi bi-currency-dollar"></i><span>@pric.Price</span>
                                            <sub>/ @pric.Period</sub>
                                        </p>
                                    </div>
                                    <div class="pricing-body-content-list">
                                        <ul>
                                            <li>
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                                Course @pric.Metod
                                            </li>
                                            <li>
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                                Content @pric.Place
                                            </li>
                                            <li>
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                                @pric.MentorTime Mentorship
                                            </li>
                                            <li>
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                                @pric.Type Course
                                            </li>
                                            <li>
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                                Support @pric.Support
                                            </li>
                                        </ul>
                                    </div>
                                    <a href="#" class="button btn-1">Choose Plan</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
