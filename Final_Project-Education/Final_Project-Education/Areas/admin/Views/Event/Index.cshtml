@model List<Event>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Event</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Event" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-hover tables-scroll">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>MainImage</th>
                            <th>Title</th>
                            <th>WorkTime</th>
                            <th>Address</th>
                            <th>Content</th>
                            <th>OldPrice</th>
                            <th>OldDiscountPrice</th>
                            <th>NewPrice</th>
                            <th>NewDiscountPrice</th>
                            <th>PricePercent</th>
                            <th>CreatedDate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                    <td> <img src="~/Uploads/@item.MainImage" alt="alternative text" style="width:200px; height:200px" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.WorkTime</td>
                                    <td>@item.Address</td>
                                    <td>@Html.Raw(item.Content != null && item.Content.Length > 150 ? item.Content.Substring(0, 150) : item.Content)</td>
                                    <td>@item.OldPrice</td>
                                    <td>@item.OldDiscountPrice</td>
                                    <td>@item.NewPrice</td>
                                    <td>@item.NewDiscountPrice</td>
                                    <td>@item.PricePercent</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Instructor.Name</td>
                                    <td>@item.Instructor.Surname</td>
                                    <td>
                                        <a class="btn btn-success" asp-area="admin" asp-controller="Event" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="admin" asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                        <a class="btn btn-primary" asp-area="admin" asp-controller="Event" asp-action="EventDetail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
