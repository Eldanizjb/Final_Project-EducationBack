@model List<StuVm>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Students</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Students" asp-action="Create">Create</a>
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Students" asp-action="DownloadToExel">Download Exl</a>
            </div>
            <hr />
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Course</th>
                            <th>Graduate</th>
                            <th>CreatedDate</th>
                            <th>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@item.CCourse.Title</td>
                                    <td>@item.Graduate</td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        <a class="btn btn-success" asp-area="admin" asp-controller="Students" asp-action="Update" asp-route-id="@item.CourseId">Update</a>
                                        <a class="btn btn-danger" asp-area="admin" asp-controller="Students" asp-action="Delete" asp-route-id="@item.CourseId" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                        <a class="btn btn-primary" asp-area="admin" asp-controller="Students" asp-action="StudentsDetail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
