@model Message

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



@{
    if (TempData["MessageError"] != null)
    {
        <div class="alert alert-success">
            <p class="text-danger">@(TempData["MessageError"] as string)</p>
        </div>
        TempData["MessageError"] = null;
    }
}


<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <h1 class="card-title" style="color:darkred">Fullname</h1>
                                <p class="form-label">@Model.Fullname</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <h1 class="card-title" style="color:darkred">Content</h1>
                                <textarea class="form-label">@Html.Raw(Model.Email)</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <h1 class="card-title" style="color:darkred">Phone</h1>
                                <p class="form-label">@Model.Phone</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <h1 class="card-title" style="color:darkred">CreatedDate</h1>
                                <p class="form-label">@Model.CreatedDate</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <h1 class="card-title" style="color:darkred">Content</h1>
                                <textarea class="form-label">@Html.Raw(Model.Text)</textarea>
                            </div>
                        </div>
                       
                        <a class="btn btn-success" asp-area="admin" asp-controller="Message" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger" asp-area="admin" asp-controller="Message" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                        <a class="btn btn-secondary" asp-area="admin" asp-controller="Message" asp-action="Index"> Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
