@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Message</h4>
            <a asp-area="admin" asp-controller="subscribe" asp-action="sendmailall" class="btn btn-success">Send mail</a>
            <div class="table-responsive pt-3">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Date</th>
                            <th>Text</th>
                            <th>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                    <td>@item.Fullname</td>
                                    <td>@Html.Raw(item.Email != null && item.Email.Length > 50 ? item.Email.Substring(0, 50) : item.Email)</td>
                                    <td>@item.Phone</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>@Html.Raw(item.Text != null && item.Text.Length > 50 ? item.Text.Substring(0, 50) : item.Text)</td>
                                    <td>
                                        <a class="btn btn-success" asp-area="admin" asp-controller="Message" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="admin" asp-controller="Message" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                        <a class="btn btn-primary" asp-area="admin" asp-controller="Message" asp-action="AboutDetail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

  