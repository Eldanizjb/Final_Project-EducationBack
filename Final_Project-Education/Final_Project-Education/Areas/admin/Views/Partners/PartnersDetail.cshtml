@model Partners

@{
    ViewData["Title"] = "PartnersDetail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



@{
    if (TempData["PartnersError"] != null)
    {
        <div class="alert alert-success">
            <p class="text-danger">@(TempData["PartnersError"] as string)</p>
        </div>
        TempData["PartnersError"] = null;
    }
}


<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">ImageFile</h1>
                            <img src="~/Uploads/@Model.Image" alt="Alternate Text" style="object-fit:cover" />
                        </div>

                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">Name</h1>
                            <p class="form-label">@Model.Name</p>
                        </div>

                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">Link</h1>
                            <p class="form-label">@Model.Link</p>
                        </div>

                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">CreatedDate</h1>
                            <p class="form-label">@Model.CreatedDate</p>
                        </div>

                        <a class="btn btn-success" asp-area="admin" asp-controller="Partners" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger" asp-area="admin" asp-controller="Partners" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                        <a class="btn btn-secondary" asp-area="admin" asp-controller="Partners" asp-action="Index"> Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
