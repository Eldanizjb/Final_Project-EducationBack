@model List<Setting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Setting</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Setting" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-hover tables-scroll">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>Logo</th>
                            <th>BannerImage</th>
                            <th>BannerImageBack</th>
                            <th>EventImage</th>
                            <th>FeatureImage</th>
                            <th>Address</th>
                            <th>Map</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>ContactInfo</th>
                            <th>Title</th>
                            <th>SupTitle</th>
                            <th>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                    <td> <img src="~/Uploads/@item.Logo" alt="alternative text" style="width: 100px; height: 100px" /></td>
                                    <td> <img src="~/Uploads/@item.BannerImage" alt="alternative text" style="width: 100px; height: 100px " /></td>
                                    <td> <img src="~/Uploads/@item.BannerImageBack" alt="alternative text" style="width: 100px; height: 100px " /></td>
                                    <td> <img src="~/Uploads/@item.EventImage" alt="alternative text" style="width: 100px; height: 100px " /></td>
                                    <td> <img src="~/Uploads/@item.FeatureImage" alt="alternative text" style="width: 100px; height: 100px " /></td>
                                    <td>@item.Address</td>
                                    <td>@Html.Raw(item.LocationOnMap != null && item.LocationOnMap.Length > 50 ? item.LocationOnMap.Substring(0, 50) : item.LocationOnMap)</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@Html.Raw(item.ContactInfo != null && item.ContactInfo.Length > 50 ? item.ContactInfo.Substring(0, 50) : item.ContactInfo)</td>
                                    <td>@item.Title</td>
                                    <td>@item.SupTitle</td>

                                    <td>
                                        <a class="btn btn-success" asp-area="admin" asp-controller="Setting" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="admin" asp-controller="Setting" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                        <a class="btn btn-primary" asp-area="admin" asp-controller="Setting" asp-action="SettingDetail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
