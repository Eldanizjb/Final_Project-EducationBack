@model CustomUser
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<!-- partial -->
<div class="container-fluid page-body-wrapper">
    <!-- partial -->
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Horizontal Two column</h4>
                            <form class="form-sample" asp-area="admin" asp-controller="Account" asp-action="UpdateUser" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <p class="card-description">
                                    Personal info
                                </p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.Name" class="col-sm-3 col-form-label">First Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.Name" />
                                                <span asp-validation-for="@Model.Name" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.Surname" class="col-sm-3 col-form-label">Last Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.Surname" />
                                                <span asp-validation-for="@Model.Surname" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.Address" class="col-sm-3 col-form-label">Address</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.Address" />
                                                <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.PhoneNumber" class="col-sm-3 col-form-label">PhoneNumber</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.PhoneNumber" />
                                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-6">
                                            <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                                            <img src="~/Uploads/@Model.Image" alt="Alternate Text" width="100" height="100" />
                                            <input class="form-control" asp-for="@Model.ImageFile">
                                            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.CreatedDate" class="col-sm-3 col-form-label">Date</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.CreatedDate" />
                                                <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.UserName" class="col-sm-3 col-form-label">UserName</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.UserName" />
                                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label asp-for="@Model.Email" class="col-sm-3 col-form-label">Email</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" asp-for="@Model.Email" />
                                                <span asp-validation-for="@Model.Email" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label asp-for="@Model.RoleId" class="form-label">Name</label>
                                        <select class="form-control" aria-label="Default select example" asp-for="@Model.RoleId" asp-items="@(new SelectList(ViewBag.Roles,"Id", "Name"))">
                                            <option selected disabled>Select role</option>
                                        </select>
                                        <span asp-validation-for="@Model.RoleId"></span>
                                    </div>
                                </div>
                                <input asp-for="Id" hidden />
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a asp-area="admin" asp-controller="Account" asp-action="User">Back to list</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
