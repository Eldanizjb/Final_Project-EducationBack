@model List<Pricing>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Pricing</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Pricing" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-hover tables-scroll">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>Title</th>
                            <th>SupTitle</th>
                            <th>Price</th>
                            <th>Period</th>
                            <th>Metod</th>
                            <th>Place</th>
                            <th>MentorTime</th>
                            <th>Type</th>
                            <th>Support</th>
                            <th>CreatedDate</th>
                            <th>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                    <th scope="row">@i</th>
                                <td>@item.Title</td>
                                <td>@item.SupTitle</td>
                                <td>@item.Price</td>
                                <td>@item.Period</td>
                                <td>@item.Metod</td>
                                <td>@item.Place</td>
                                <td>@item.MentorTime</td>
                                <td>@item.Type</td>
                                <td>@item.Support</td>
                                <td>@item.CreatedDate</td>

                                <td>
                                    <a class="btn btn-success" asp-area="admin" asp-controller="Pricing" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="admin" asp-controller="Pricing" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                    <a class="btn btn-primary" asp-area="admin" asp-controller="Pricing" asp-action="PricingDetail" asp-route-id="@item.Id">Details</a>
                                </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

