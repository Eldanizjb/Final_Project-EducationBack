<!--!--!--section contact--!--!--!-->
<section id="contact" class="section-contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 contact-left-side">
                <div class="contact-img" data-wow-delay=".4s">
                    <a href="~/assets/images/testimoials/contact-us-img.png" download>
                        <img src="~/assets/images/testimoials/contact-us-img.png " alt="contact-us-img">
                    </a>
                </div>
                <div class="contact-img-box-second-faq"></div>
            </div>
            <div class="col-lg-6 contact-right-side">
                <h1 class="header">Submit ticket</h1>
                <h3 class="title">Not Found Answer Contact Us</h3>
                <div class="contact-submit-form">
                    <form id="message" class="footer-subscribe-form" asp-controller="contact" asp-action="Message" method="post" data-id="7">
                        <div class="form-box">
                            <input type="text" name="FullName" class="form-input" placeholder="Full Name"
                                   required="">
                        </div>
                        <div class="form-box">
                            <input name="EmailAddress" class="form-input" placeholder="email@gmail.com"
                                   required="">
                        </div>
                        <div class="form-box">
                            <input name="PhoneNo" class="form-input" placeholder="Phone No."
                                   required="">
                        </div>
                        <div class="form-box">
                            <textarea type="text" name="Content"  placeholder="Message..."></textarea>
                        </div>
                        <div class="form-box">
                            <button type="submit" id="btn-message" class="button btn-1" title="Message" value="message">SUBMIT NOW</button>
                        </div>
                        <div class="alert alert-success" style="display: none; margin-top:25px"></div>
                        <div class="alert alert-warning" style="display: none; margin-top: 25px"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


