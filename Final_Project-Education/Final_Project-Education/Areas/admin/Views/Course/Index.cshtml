@model List<Course>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}]

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table Course</h4>
            <div class="col-lg-12">
                <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Course" asp-action="Create">Create</a>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-hover tables-scroll">
                    <thead>
                        <tr>
                            <th>Num</th>
                            <th>MainImage</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Lectures</th>
                            <th>Duration</th>
                            <th>Enrolled</th>
                            <th>Language</th>
                            <th>OldPrice</th>
                            <th>OldDiscountPrice</th>
                            <th>NewPrice</th>
                            <th>NewDiscountPrice</th>
                            <th>PricePercent</th>
                            <th>CreatedDate</th>
                            <th>Instructors</th>
                            <th>CourseCategory</th>
                            <th>CourseLevel</th>
                            <th>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 0;
                            foreach (var item in Model)
                            {
                                i++;
                                <tr class="table-info">
                                   <th scope="row">@i</th>
                                <td> <img src="~/Uploads/@item.MainImage" alt="alternative text" style="width:100px; height:100px" /></td>
                                <td>@item.Title</td>
                                <td>@Html.Raw(item.Content != null && item.Content.Length > 150 ? item.Content.Substring(0, 150) : item.Content)</td>
                                <td>@item.Lectures</td>
                                <td>@item.Duration</td>
                                <td>@item.Enrolled</td>
                                <td>@item.Language</td>
                                <td>@item.OldPrice</td>
                                <td>@item.OldDiscountPrice</td>
                                <td>@item.NewPrice</td>
                                <td>@item.NewDiscountPrice</td>
                                <td>@item.PricePercent</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.Instructor.Name</td>

                                <td>
                                    @foreach (var tag in item.CourseCategoryToCourses)
                                    {
                                        <span>@tag.CourseCategory.Name</span>
                                    }
                                </td>
                                <td>@item.CourseLevel.Name</td>
                                <td>
                                    <a class="btn btn-success" asp-area="admin" asp-controller="Course" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="admin" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                                    <a class="btn btn-primary" asp-area="admin" asp-controller="Course" asp-action="CourseDetail" asp-route-id="@item.Id">Details</a>
                                </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



