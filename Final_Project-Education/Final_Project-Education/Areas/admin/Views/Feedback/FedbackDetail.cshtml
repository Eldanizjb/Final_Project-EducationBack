@model Feedback

@{
    ViewData["Title"] = "FedbackDetail";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



@{
    if (TempData["FeedbackError"] != null)
    {
        <div class="alert alert-success">
            <p class="text-danger">@(TempData["FeedbackError"] as string)</p>
        </div>
        TempData["FeedbackError"] = null;
    }
}


<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">

                            <h1 class="card-title" style="color:darkred">MainImageFile</h1>
                            <img src="~/Uploads/@Model.Image" alt="Alternate Text" style="object-fit:cover" />
                        </div>
                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">Fullname</h1>
                            <p class="form-label">@Model.Fullname</p>
                        </div>
                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">Content</h1>
                            <p class="form-label">@Html.Raw(Model.Content)</p>
                        </div>
                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">Position</h1>
                            <p class="form-label">@Model.Position</p>
                        </div>
                        <div class="form-group">
                            <h1 class="card-title" style="color:darkred">CreatedDate</h1>
                            <p class="form-label">@Model.CreatedDate</p>
                        </div>
                    
                        <a class="btn btn-success" asp-area="admin" asp-controller="Feedback" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                        <a class="btn btn-danger" asp-area="admin" asp-controller="Feedback" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Silinməsinə əminsənmi?')">Delete</a>
                        <a class="btn btn-secondary" asp-area="admin" asp-controller="Feedback" asp-action="Index"> Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
